                android:scaleType="fitXY"
                android:src="@mipmap/img6" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="383dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img7" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="383dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img7" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="383dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img7" />


        </LinearLayout>

    </ScrollView>

</com.wanglijun.xiami.xiami.XiamiContainer>

